{
  "name": "loukai",
  "version": "1.0.0",
  "description": "Loukai - Real-time karaoke player with stem control and coaching",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "npm run build:web && electron . --dev --no-sandbox",
    "build": "npm run build:web && electron-builder",
    "build:web": "cd src/web && npm install && npm run build",
    "build:linux": "npm run build:web && electron-builder --linux",
    "build:win": "npm run build:web && electron-builder --win",
    "build:mac": "npm run build:web && electron-builder --mac",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "karaoke",
    "audio",
    "electron",
    "music",
    "coaching",
    "autotune"
  ],
  "author": "Loukai Team",
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "audiomotion-analyzer": "^4.5.1",
    "bcrypt": "^6.0.0",
    "butterchurn": "^2.6.7",
    "butterchurn-presets": "^2.4.7",
    "cookie-session": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "fuse.js": "^7.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.13.0",
    "yauzl": "^3.0.0",
    "yazl": "^3.3.1"
  },
  "build": {
    "appId": "com.loukai.app",
    "productName": "Loukai",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "static/**/*",
      "node_modules/**/*",
      "!src/web/node_modules",
      "!src/web/src"
    ],
    "icon": "static/images/logo.png",
    "linux": {
      "target": "AppImage",
      "icon": "static/images/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "static/images/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "static/images/logo.png"
    }
  }
}
